<div class="list-link"><%= link_to image_tag("dark_icons/view_listw.png", :width=>"24", :class=>"link-img"), genres_path %> </div>
<div class="back-link"><%= link_to image_tag("dark_icons/undow.png", :width=>"24", :class=>"link-img"), :back %></div>
<h1>Genre <%= @genre.id %></h1>
<%=link_to image_tag("dark_icons/tools_1.png", :width=>"15", :height=>"15"), edit_genre_path(@genre) %> <%=link_to image_tag("dark_icons/trash.png", :width=>"15", :height=>"15"), genre_path(@genre), method: :delete,
		data: { confirm: 'Are you sure?' } %> <%= link_to image_tag("dark_icons/plus_1.png", :width=>"15", :height=>"15"), new_genre_path %>
<table style="width:500px;">
	<tr>
		<td>
			<strong>Genre:</strong>
			<%= @genre.name %>
		</td>
	</tr>

	<tr>
		<td>
			<strong>Notes:</strong></br>
			<%= @genre.notes %>
		</td>
	</tr>
	<tr>
		<td colspan="5">
			<b></br>Movies </b>
			<% if @genre.movies.any? %>
				(<%= @genre.movies.count %>)</br>
				<table class="sub-result">
				<col width=80 >
				<col width=100 >
				<col width=200 >
					 <tr bgcolor="#aaaaff">
					  <th>Title</th>
					  <th>Sub title</th>
					  <th>Sunopsis</th>
					  </tr>

						<%= render @genre.movies %> 

					</table>
			<% else %> (0)
			<% end %>
	</table>


