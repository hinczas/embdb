<div class="list-link"><%= link_to image_tag("dark_icons/view_listw.png", :width=>"24", :class=>"link-img"), manufacturers_path %> </div>
<div class="back-link"><%= link_to image_tag("dark_icons/undow.png", :width=>"24", :class=>"link-img"), :back %></div>
<h1>Manufacturer: <%= @manufacturer.m_name %></h1>
<%=link_to image_tag("dark_icons/tools_1.png", :width=>"15", :height=>"15"), edit_manufacturer_path(@manufacturer) %> <%=link_to image_tag("dark_icons/trash.png", :width=>"15", :height=>"15"), manufacturer_path(@manufacturer), method: :delete,
		data: { confirm: 'Are you sure?' } %> <%= link_to image_tag("dark_icons/plus_1.png", :width=>"15", :height=>"15"), new_manufacturer_path %>
<table style="width:500px;">
	<tr>
		<td rowspan="8" width="120">
		 <% if @manufacturer.logo %>
			<%= image_tag('/public'+@manufacturer.logo, :class=>"upl-img")%>
			<% else %>
			<%= image_tag("no_photo.png", :class=>"upl-img")%>
			<% end %>
		</td>
	</tr>
	<tr>
		<td>
			<b>Name</b></br>
			<%= @manufacturer.m_name %>
		</td>
		<td>
			<b>Full name</b></br>
			<%= @manufacturer.m_full_name %>
		</td>
	</tr>
	<tr>
		<td colspan="3">
			<b>Description</b></br>
			<%= @manufacturer.m_description %>
		</td>
	</tr>
	<tr>
		<td colspan="3">
			<b>Address</b></br>
			<%= @manufacturer.m_address %>
		</td>
	</tr>
	<tr>
		<td colspan="3">
			<b>Website</b></br>
			<%= link_to @manufacturer.m_website,"http://#{@manufacturer.m_website}" %>
		</td>
	</tr>
	<tr>
		<td colspan="3">
			<b>Email</b></br>
			<%= link_to @manufacturer.m_email, "mailto:#{@manufacturer.m_email}"  %>
		</td>
	</tr>
	<tr>
		<td colspan="3">
			<b>Notes</b></br>
			<%= @manufacturer.m_note %>
		</td>
	</tr>
	<tr>
		<td colspan="5">
			<b></br>Parts </b>
			<% if @manufacturer.parts.any? %>
				(<%= @manufacturer.parts.count %>)</br>
				<table class="sub-result">
				<col width=80 >
				<col width=80 >
				<col width=150 >
				<col width=200 >
					 <tr bgcolor="#aaffaa">
					  <th>Number</th>
					  <th>Qte</th>
					  <th>Name</th>
					  <th>Description</th>
					  </tr>

						<%= render @manufacturer.parts %> 

					</table>
			<% else %> (0)
			<% end %>
	</table>
