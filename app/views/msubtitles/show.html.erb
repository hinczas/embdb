<div class="list-link"><%= link_to image_tag("dark_icons/view_listw.png", :width=>"24", :class=>"link-img"), msubtitles_path %> </div>
<div class="back-link"><%= link_to image_tag("dark_icons/undow.png", :width=>"24", :class=>"link-img"), :back %></div>
<h1>Subtitle <%= @msubtitle.id %></h1>
<%=link_to image_tag("dark_icons/tools_1.png", :width=>"15", :height=>"15"), edit_msubtitle_path(@msubtitle) %> <%=link_to image_tag("dark_icons/trash.png", :width=>"15", :height=>"15"), msubtitle_path(@msubtitle), method: :delete,
		data: { confirm: 'Are you sure?' } %> <%= link_to image_tag("dark_icons/plus_1.png", :width=>"15", :height=>"15"), new_msubtitle_path %>
<table style="width:500px;">
	<tr>
		<td>
			<strong>Subtitle:</strong>
			<%= @msubtitle.msubtitle %>
		</td>
	</tr>

	<tr>
		<td>
			<strong>Notes:</strong></br>
			<%= @msubtitle.notes %>
		</td>
	</tr>
	<tr>
		<td colspan="5">
			<b></br>Movies </b>
			<% if @msubtitle.movies.any? %>
				(<%= @msubtitle.movies.count %>)</br>
				<table class="sub-result">
				<col width=80 >
				<col width=100 >
				<col width=200 >
					 <tr bgcolor="#aaaaFF">
					  <th>Title</th>
					  <th>Sub title</th>
					  <th>Sunopsis</th>
					  </tr>

						<%= render @msubtitle.movies %> 

					</table>
			<% else %> (0)
			<% end %>
	</table>


