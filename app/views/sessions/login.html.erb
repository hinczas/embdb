<style>
	head 		{display:none;}
	.header 	{display:none;}
	.header2 	{display:none;}
	.home-link 	{display:none;}
	.home_link 	{display:none;}
	.site-footer {display:none;}
	.page-wrap 	{min-height:0; height:100%; width:100%;margin-bottom:-20%;}
	.login-container {
		margin-left:auto;
		margin-right:auto;
		margin-top:20%;
		margin-bottom:auto;
		height:143px; width:200px;
		border:1px solid #BFBFBF;
		border-radius:5px;
		background:white;
		box-shadow: 0px 0px 3px #008000, 0 5px 15px #eee inset;
		padding:5px;
		}
	.login {
		text-align:center;
		margin-left:auto;
		margin-right:auto;
		widht:100%;
	}
	.login-button {
		text-align:center;
		margin-top:5px;
		widht:100%;
	}		
	body {
		background-image: url("<%= image_path("seamless3.png") %>");
			width:100%;
			height:100px;
	}
</style>

<div class="login-container">
  <%= form_tag(:action => 'login_attempt') do %>
	<div class="login"><strong>Login</strong></div>	
	<div class="login">username:</div>
	<div class="login"><%= text_field_tag(:username_or_email)%></div>
	<div class="login">password:</div>
	<div class="login"><%= password_field_tag(:login_password)%></div>
    <div class="login-button"><%= submit_tag("Log In") %></div>
    <div class="login-button"><%= link_to "Register", new_user_path %></div>
  <% end %>
</div>
