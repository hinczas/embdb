<% if @current_user.level < 2  %>

<h1>Users <%= link_to image_tag("dark_icons/plus_1.png", :width=>"20", :height=>"20"), new_user_path(id: params[:id]) %>	</h1>

    <% @users.each do |user| %>
	 <% if user.level==0 && @current_user.level != 0 %>
	 <% else %>	 
		<table>
		  <body>
			  <tr>
				<td><% if user.photo %>
						<%= image_tag('/public/images/'+user.photo, :class=>"avatar") %>
					<% else %>
						<%= image_tag("/public/images/no_avatar.jpeg", :class=>"avatar")%>
					<% end %>
				</td>
				<td>
					<h3  style="color:black;"><%= link_to user.username, user %> <%=link_to image_tag("dark_icons/edit.png", :width=>"13", :height=>"13"), edit_user_path(user) %></h3>	
					<%= user.name %> <%= user.surname %> </br>
				    <p style="color:gray;"><%= user.notes %></p>
				</td>
			 </tr>
		  </body>
		</table>
     <% end %>
    <% end %>

<% else %>
<%= controller.redirect_to :denied %>
<% end %>
