<div class="list-link"><%= link_to image_tag("dark_icons/view_listw.png", :width=>"24", :class=>"link-img"), packages_path %> </div>
<div class="back-link"><%= link_to image_tag("dark_icons/undow.png", :width=>"24", :class=>"link-img"), :back %></div>
<h1>Edit</h1> <h2><% if flash[:notice] %> <font color="red"><%= javascript_tag "alert('Already exists. Redirecting to edit.')" %></font>	<% end %></h2>  
<%= form_for :package, url: package_path(@package), method: :patch do |f| %>
<table>
<tr>
		<td rowspan="4" width="120">
			<%= f.file_field :pk_photo, multipart: true, :class => "file-browser" %>
			<% if @package.pk_photo %>
				<%= image_tag(@package.pk_photo, :class=>"upl-img")%>
			<% else %>
				<%= image_tag("no_photo.png", :class=>"upl-img")%>
			<% end %></br>
			<% if @package.pk_photo %><%= check_box_tag :del_photo , 1 %> Delete photo <% end %><br/>
		 <%= label_tag "Web URL" %><br/>
		 <%= text_field_tag :web_photo, nil, :class=>"wide-text" %>
		</td>
		<td>
			<!--<tr>
				<td>
					 <%= f.label 'Number' %><br>
					 <%= f.text_field :pk_number, :size => "5", :class=>"wide-text" %>
				</td>
			</tr>-->
			<tr>
				<td>
					 <%= f.label 'Name' %><br>
					 <%= f.text_field :pk_name, :class=>"wide-text"%>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					 <%= f.label 'Description' %><br>
					 <%= f.text_area :pk_description, :cols=>"30", :rows=>"5", :class=>"wide-text"  %>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					 <%= f.label 'Notes' %><br>
					 <%= f.text_area :pk_note, :cols=>"30", :rows=>"5", :class=>"wide-text"  %>
				</td>
			</tr>
		</td>
	</tr>
</table>
<div class="float-save"><input type="submit" value="Save" class="button"></div>
<div id="top-save"><input type="submit" value="" class="button"></div>
<% end %>

