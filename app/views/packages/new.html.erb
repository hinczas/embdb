<div class="list-link"><%= link_to image_tag("dark_icons/view_listw.png", :width=>"24", :class=>"link-img"), packages_path %> </div>
<div class="back-link"><%= link_to image_tag("dark_icons/undow.png", :width=>"24", :class=>"link-img"), :back %></div><h1>New package</h1>
<%= form_for :package, url: packages_path do |f| %>
<table>
	<!--<tr>
		<td>
			 <%= f.label 'Number' %><br>
			 <%= f.text_field :pk_number, :size => "5", :class=>"wide-text" %>
		</td>
