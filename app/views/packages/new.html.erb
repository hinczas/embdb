	</tr>
	<tr>
		<td>
		 <%= f.label 'Photo' %>
		 <%= f.file_field :pk_photo, multipart: true, :class => "file-browser" %><br/>
		 <%= label_tag "Web URL" %><br/>
		 <%= text_field_tag :web_photo, nil, :class=>"wide-text" %>
		</td>
	</tr>
